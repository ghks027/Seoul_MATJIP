<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

 <mapper namespace = "com.ganghwan.seoulMatjip.post.dao.PostDAO">
 
 	<!-- 포스트 작성 -->
 	<insert id = "insertPost" parameterType = "map">
 		INSERT INTO `post`
 		(
 			`userId`
 			, `userLoginId`
 			, `title`
 			, `content`
 			, `imagePath`
 			, `areaAreaId`
 			, `userProfileImage`
 			, `createdAt`
 			, `updatedAt`
 		)
 		VALUES
 		(
 			#{userId}
 			, #{userLoginId}
 			, #{title}
 			, #{content}
 			, #{imagePath}
 			, #{areaAreaId}
 			, #{userProfileImage}
 			, now()
 			, now()
 		)
 	</insert>
 	
 	<!-- 포스트 불러오기 -->
 	<select id = "selectPostList" resultType = "com.ganghwan.seoulMatjip.post.model.Post">
 		SELECT
 			`id`
 			, `userId`
 			, `userLoginId`
 			, `title`
 			, `content`
 			, `imagePath`
 			, `areaAreaId`
 			, `userProfileImage`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`post`
 		ORDER BY
 			`id` DESC
 	</select>
 	
 	<!-- 아이디로 포스트 불러오기 -->
 	<select id = "selectPostDetail" resultType = "com.ganghwan.seoulMatjip.post.model.Post">
 		SELECT
 			`id`
 			, `userId`
 			, `userLoginId`
 			, `title`
 			, `content`
 			, `imagePath`
 			, `areaAreaId`
 			, `userProfileImage`
 			, `createdAt`
 			, `updatedAt`
 		FROM
 			`post`
 		WHERE
 			`id` = #{postId}
 	</select>
 </mapper>