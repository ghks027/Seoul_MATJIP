<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "com.ganghwan.seoulMatjip.user.dao.UserDAO">

	<!-- 로그인 -->
	<select id = "selectUser" parameterType = "map" resultType = "com.ganghwan.seoulMatjip.user.model">
		SELECT
			`id`
			, `loginId`
			, `password`
			, `userName`
			, `areaId`
			, `profileImage`
			, `createdAt`
			, `updatedAt`
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
		AND
			`password` = #{password}
	</select>
	
</mapper>